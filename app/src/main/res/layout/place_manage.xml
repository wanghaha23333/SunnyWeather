<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/managePlace"
    android:background="?android:windowBackground">
    
    <LinearLayout
        android:id="@+id/placeManageLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/design_default_color_primary">

        <TextView
            android:id="@+id/placeManage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="4dp"
            android:text="@string/placeManage"
            android:textSize="22sp"
            android:textColor="@color/white"
            tools:ignore="RelativeOverlap" />

        <EditText
            android:id="@+id/searchPlaceEntrance"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:hint="@string/searchPlace"
            android:background="@drawable/search_bg"
            android:focusable="false"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/placeManageReV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/placeManageLL"/>

</RelativeLayout>